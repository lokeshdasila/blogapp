<% include partials/header %>
<div class="ui main text container segment">
    <div class="ui huge header"><%= blog.title%></div>
    <div class="ui top attached segment">
        <div class="item">
            <img class = "ui centered rounded image" src="<%= blog.image %>">
            <div class="content">
                <%= blog.created.toDateString() %>
            </div>
            <div class="description">
                <%- blog.content %>
            </div>
        </div>
        <a id="editButton" href="/blogs/<%= blog._id%>/edit" class="ui primary basic button">Edit</a>
        <form id="formDeleteButton" action="/blogs/<%= blog._id%>?_method=DELETE" method="POST">
            <button class="ui negative basic button">Delete</button>
        </form>
    </div>
</div>

<% include partials/footer %>